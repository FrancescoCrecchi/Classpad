 body
  body
   table.container
     tr.header
      td
        .navbar
          .navbar-inner
            .responsive-container
              a.brand(href='#') ClassPadÂ 
              .subtitle the best shared digital paper
   .content-container      
    .subheader
     .loginmessage Login or register
     .btn-toolbar
      table.button-section
       tr
        td
         .btn-group
           button(onclick="location.href=\'/login'") 
            span.fa.fa-arrow-circle-o-right
            span.content Login
           button(onclick="location.href=\'/register'") 
            span.fa.fa-arrow-circle-o-up
            span.content Register
         .clear
     .clear
    .data-container  
     h2 Class list
     .listaClassi-container
      table#listaClassi
       tr
         td.thead  Title
         td.thead  Author
         td.thead  Date
         td.thead
       each clss in classes
        tr
          td=clss.title
          td=clss.author
          td=clss.date
          td
           a.fa.fa-eye(href='/class/#{clss.id}') 
            span.linkcontent Open
      