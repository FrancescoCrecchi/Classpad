      //for pdf generation
      var classId = "#{id}"; //getting the id from jade
      var classTitle = "#{title}"; //getting the title from jade

      //To redraw at 30fps
      var toRedraw = false;

      //Matrix
      var W = new WorldTransform();
      //var identity = new Matrix();

      //when all DOM is ready
      document.onready = function(){
        lazyInit();
        //transMonitor();
        initCanvasElements();

        $("#paper")[0].addEventListener('touchmove',stopScrolling,false);
        $("#paper").focus();
        $("#black").click();
      }

      $(window).resize(function(){
        initCanvasElements();
        refresh();
      });
      
